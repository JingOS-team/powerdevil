<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.PowerDevil">
    
    <method name="refreshStatus" />
    <method name="reloadAndStream" />
    <method name="streamData" />
    <method name="emitNotification">
      <arg type="s" direction="in" />
      <arg type="s" direction="in" />
      <arg type="a{sv}" direction="in" />
      <annotation name="com.trolltech.QtDBus.QtTypeName.In2" value="char*" />
      <arg type="s" direction="in" />
    </method>
    
    <method name="setProfile">
      <arg type="s" direction="in" />
    </method>
    <method name="suspend">
      <arg type="i" direction="in" />
    </method>
    <method name="setPowerSave">
      <arg type="b" direction="in" />
    </method>
    <method name="setBrightness">
      <arg type="i" direction="in" />
    </method>
    <method name="turnOffScreen" />
    
    <method name="getSupportedSuspendMethods">
      <arg type="a{sv}" direction="out" />
      <annotation name="com.trolltech.QtDBus.QtTypeName.Out0" value="QVariantMap" />
    </method>
    
    <signal name="lidClosed">
      <arg type="i" direction="out" />
      <arg type="s" direction="out" />
    </signal>
    <signal name="stateChanged">
      <arg type="i" direction="out" />
      <arg type="b" direction="out" />
    </signal>
    <signal name="profileChanged">
      <arg type="s" direction="out" />
      <arg type="as" direction="out" />
    </signal>
     <signal name="DPMSconfigUpdated">
    </signal>
  </interface>
</node>
